# {macro-name} - shorthand for a collection of ORed signals
# SIGNAL - if signal is Boolean, asserts the inverse of the default
# SIGNAL=<num> - force the signal to a particular value
#

{IncrementPC}
PCWSEL=1

{WritePCL}
PCWSEL=2

{WritePCH}
PCWSEL=3

{AddrBusPC}
PCRSEL=1

{DataBusPCL}
PCRSEL=2

{DataBusPCH}
PCRSEL=3

{WriteTD}
TWSEL=1

{WriteTAL}
TWSEL=2

{WriteTAH}
TWSEL=3

{NextInstruction}
PCRSEL=1
/NEWOP

{AddrBusTA}
/TRADR

{DataBusTD}
/TRDTA

{DataBusTAL}
/TALDT

{WriteRAM}
/WRAM

{AddrBusSP}
/SPADR

{IncrementSP}
SPSEL=2

{DecrementSP}
SPSEL=3

